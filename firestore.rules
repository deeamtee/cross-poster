rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for user-configs collection
    match /user-configs/{userId} {
      // Users can only read and write their own configuration documents
      allow read, write: if request.auth != null 
                         && request.auth.uid == userId;
      
      // Additional validation for writes
      allow create, update: if request.auth != null 
                           && request.auth.uid == userId
                           && validateConfigDocument(request.resource.data);
    }
    
    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

// Validation function for configuration documents
function validateConfigDocument(data) {
  return data.keys().hasAll(['encryptedData', 'iv', 'salt', 'updatedAt', 'version'])
         && data.encryptedData is string
         && data.iv is string  
         && data.salt is string
         && data.updatedAt is string
         && data.version is string
         && data.encryptedData.size() > 0
         && data.iv.size() > 0
         && data.salt.size() > 0;
}